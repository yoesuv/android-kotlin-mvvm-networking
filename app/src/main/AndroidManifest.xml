<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yoesuv.networkkotlin2">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.yoesuv.networkkotlin2.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.yoesuv.networkkotlin2.main.views.MainActivity"
            android:launchMode="singleTop"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".menu.listplace.views.MainListPlaceActivity"
            android:parentActivityName=".main.views.MainActivity"/>

        <activity android:name=".menu.gallery.views.MainGalleryActivity"
            android:parentActivityName=".main.views.MainActivity"/>

    </application>

</manifest>